@page
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="horizontal-layout horizontal-menu horizontal-menu-padding menu-expanded"
      data-open="click" data-menu="horizontal-menu">
    <div class="app-content container-fluid">
        <div class="row">
            <div class="col-9 pl-0 pr-0">
                <video class="video-js vjs-16-9 vjs-big-play-centered"
                        controls
                        preload="none"
                        disablePictureInPicture
                        data-setup="{}">
                    <source src="https://onlineeducationapp.canberkpolat.com:8443/vod/test_key.m3u8"
                            type="application/x-mpegURL">
                    <p class="vjs-no-js">
                        To view this video please enable JavaScript, and consider upgrading to a
                        web browser that
                        <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
                    </p>
                </video>
            </div>
            <div class="col-3 chat-application">
                <section class="chat-app-window">
                    <div class="chats" id="chats">
                        <div class="chat chat-left">            <div class="chat-body">                <div class="chat-content" style="color: #FFFFFF; background-color: #956C33;">test1: asdas</div>            </div>        </div>
                    </div>
                </section>
                <section class="chat-app-form">
                    <form class="chat-app-input d-flex pl-0">
                        <input id="messageInput" type="text" class="form-control pl-1 mw-100" style="width: 100%;" placeholder="Type your message">
                        <button id="sendButton" type="button" class="btn btn-info ml-1">
                            <span class="d-none d-lg-block">Send</span>
                        </button>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>


