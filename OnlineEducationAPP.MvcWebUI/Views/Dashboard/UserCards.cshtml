@model List<OnlineEducationAPP.MvcWebUI.Identity.ApplicationUser>
@{
    ViewData["Title"] = "UserCards";
}

    <section id="user-cards-with-square-thumbnail" class="row mt-2">
        <div class="col-12">
           <h1><span class="badge badge-secondary">USERS</span></h1>
        </div>
        @foreach (var user in Model)
        {
            <div class="col-xl-3 col-md-6 col-12">
                <div class="card box-shadow-1">
                    <div class="text-center">
                        <div class="card-body">
                            <img src="@user.ProfileImageUrl" class="rounded-circle  height-150"
                                 alt="Card image">
                        </div>
                        <div class="card-body">
                            <a class="btn btn-dark btn-sm active" role="button" aria-pressed="true" asp-action="Detail" asp-controller="Profile" asp-route-id="@user.Id"> @user.Name @user.Surname</a>
                            <br /> <br />
                            <h3 class="card-subtitle text-muted">Student</h3>
                        </div>
                    </div>
                </div>
            </div>
        }



    </section>


