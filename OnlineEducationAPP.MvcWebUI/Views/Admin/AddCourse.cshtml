@model List<Category>
@{
    ViewData["Title"] = "AddCourse";
}


<div class="app-content container center-layout mt-5">
    <div class="content-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" id="bordered-layout-icons">Add New Category</h3>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <form class="form" asp-controller="Admin" asp-action="AddNewCategory">
                                <div class="row justify-content-md-center">
                                    <div class="col-md-6">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label>Category Name</label>
                                                <input type="text" class="form-control" placeholder="Name" name="categoryName">
                                            </div>
                                            <div class="form-group">
                                                <label>Category Type</label>
                                                <input type="text" class="form-control" placeholder="Type" name="type">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer" style="text-align:center;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="ft-save"></i> Save
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row match-height">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" id="card-header">
                        <h1 class="card-title">Add New Course</h1>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    </div>
                    <div class="card-content collapse show">
                        <div class="card-body">
                            <form class="form" asp-controller="Admin" asp-action="AddNewCourse">
                                <div class="row justify-content-md-center">
                                    <div class="col-md-6">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label for="categoryId">Category Names</label>



                                                <select class="selectBox selectBox-lg" name="categoryId">
                                                    @foreach (var category in Model)
                                                    {
                                                        <option value="@category.Id">@category.Name</option>
                                                    }

                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="streamName">Course Name</label>
                                                <input type="text" class="form-control" placeholder="Course Name" name="courseName">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer" style="text-align:center;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="ft-save"></i> Save
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/app-assets/js/scripts/forms/select/form-selectBoxIt.js" type="text/javascript"></script>