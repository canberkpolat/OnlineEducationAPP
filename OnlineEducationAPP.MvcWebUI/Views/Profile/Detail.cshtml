@model UserEditViewModel
@{
    ViewData["Title"] = "Detail";
    //var defaultPP = "~/images/" + (Model.ProfileImageUrl ?? "defaultPP.jpg");
}

<div class="content-body">
    <div id="user-profile">
        <div class="row">
            <div class="col-12">
                <div class="card profile-with-cover">
                    <div class="card-img-top img-fluid bg-cover height-300" style="background: url('@Model.CarouselImageUrl') 80%;"></div>
                    <div class="media profil-cover-details w-100">
                        <div class="media-left pl-2 pt-2">
                            <a href="#" class="profile-image">
                                <img src="@Model.ProfileImageUrl" class="rounded-circle img-border height-100"
                                     alt="Card image">
                            </a>
                        </div>
                        <div class="media-body pt-3 px-2">
                            <div class="row">
                                <div class="col">
                                    <h3 class="card-title">@Model.Name  @Model.Surname</h3>
                                </div>
                                <div class="col text-right">
                                    <div class="btn-group d-none d-md-block float-right ml-2" role="group" aria-label="Basic example">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <nav class="navbar navbar-light navbar-profile align-self-end">
                        <button class="navbar-toggler d-sm-none" type="button" data-toggle="collapse" aria-expanded="false"
                                aria-label="Toggle navigation"></button>
                    </nav>
                    <nav class="navbar navbar-expand-lg">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        </div>
                    </nav>
                </div>



            </div>
        </div>
    </div>

    <div class="content-body">
        <!-- Striped row layout section start -->
        <section id="striped-row-form-layouts">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content collpase show">
                            <div class="card-body">
                                <form enctype="multipart/form-data" asp-controller="Profile" asp-action="Edit" method="post" class="form form-horizontal striped-rows form-bordered">
                                    <div class="form-body">
                                        <h4 class="form-section"><i class="ft-user"></i> Personal Info</h4>
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="projectinput1">First Name</label>
                                            <div class="col-md-9">
                                                <input hidden asp-for="Id" />
                                                <input hidden asp-for="ProfileImageUrl" />
                                                <input hidden asp-for="CarouselImageUrl" />
                                                <input asp-for="Name" class="form-control" placeholder="First Name">
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="projectinput2">Last Name</label>
                                            <div class="col-md-9">
                                                <input asp-for="Surname" class="form-control" placeholder="Last Name">
                                                <span asp-validation-for="Surname" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="projectinput3">E-mail</label>
                                            <div class="col-md-9">
                                                <input asp-for="Email" class="form-control" placeholder="E-mail">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" for="projectinput4">User Name</label>
                                            <div class="col-md-9">
                                                <input asp-for="UserName" class="form-control" placeholder="User Name">
                                                <span asp-validation-for="UserName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control">Change Profile Picture</label>
                                            <div class="col-md-9">
                                                <label class="file center-block">
                                                    <input asp-for="ProfilePhoto" type="file">
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group row last">
                                            <label class="col-md-3 label-control">Change Profile Picture</label>
                                            <div class="col-md-9">
                                                <label class="file center-block">
                                                    <input asp-for="CarouselPhoto" type="file">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions" style="text-align:center;">
                                        <a type="button" href="/Dashboard/Index" class="btn btn-warning mr-1">
                                            <i class="ft-x"></i> Cancel
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="la la-check-square-o"></i> Save
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </section>
        <!-- // Striped row layout section end -->
    </div>
</div>
