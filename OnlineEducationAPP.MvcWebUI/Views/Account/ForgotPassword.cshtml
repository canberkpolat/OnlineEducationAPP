@model ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="loading" lang="en" data-textdirection="ltr">
<head>
    @*@{Html.RenderPartial("_CssJsLinks"); }*@
    <partial name="_CssJsLinks" />
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/components.css">
</head>

<body class="horizontal-layout horizontal-menu horizontal-menu-padding 1-column  bg-full-screen-image menu-expanded blank-page blank-page">
    <div class="app-content container center-layout mt-2">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="flexbox-container">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="col-md-4 col-10 box-shadow-2 p-0">
                            <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                                <div class="card-header border-0">
                                    <div class="card-title text-center">
                                        <h3 class="brand-text">Online Education</h3>
                                        <h6>Did you forget your password? Dont worry , it happens sometimes</h6>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
                                        <span>Enter Your Email Adress</span>
                                    </p>
                                    <div class="card-body">
                                        <form class="form-horizontal" method="post">
                                            <fieldset class="form-group position-relative has-icon-left">
                                                <input asp-for="Email" class="form-control" id="Email" placeholder="Your Email Address"
                                                       required>
                                                <div class="form-control-position">
                                                    <i class="ft-mail"></i>
                                                </div>
                                            </fieldset>
                               
                                            <button type="submit" class="btn btn-outline-info btn-block"><i class="ft-unlock"></i> Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
